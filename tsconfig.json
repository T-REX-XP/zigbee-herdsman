{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "allowJs": true
    },
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
        "src/**/*.json"
    ],
    "exclude": [
        "src/deprecated"
    ]
}
